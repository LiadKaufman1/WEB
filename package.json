{
    "name": "web-root",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "postinstall": "cd client && npm install",
        "build": "cd client && npm run build && cd .. && rm -rf dist && mv client/dist dist",
        "server": "node api/server.js",
        "client": "cd client && npm run dev",
        "dev": "concurrently \"npm run server\" \"npm run client\""
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.2.1",
        "mongoose": "^9.0.2"
    },
    "engines": {
        "node": "18.x"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}